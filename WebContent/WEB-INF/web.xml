<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>BiblioTech</display-name>
	<servlet>
		<servlet-name>EsempioDS</servlet-name>
		<servlet-class>it.biblio.servlet.EsempioDS</servlet-class>
	</servlet>
	<servlet-mapping>
        <servlet-name>EsempioDS</servlet-name>
        <url-pattern>/EsempioDS</url-pattern>
    </servlet-mapping>
	<context-param>
		<param-name>data.source</param-name>
		<param-value>java:comp/env/jdbc/bibliodb</param-value>
	</context-param>

	<session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
	<resource-ref>
		<res-ref-name>jdbc/bibliodb</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	<welcome-file-list>
        <welcome-file>EsempioDS</welcome-file>
    </welcome-file-list>
</web-app>