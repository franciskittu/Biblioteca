<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>BiblioTech</display-name>
  <servlet>
    <servlet-name>EsempioDS</servlet-name>
    <servlet-class>it.biblio.servlet.EsempioDS</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Registrazione</servlet-name>
    <servlet-class>it.biblio.servlet.Registrazione</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Visualizza</servlet-name>
    <servlet-class>it.biblio.servlet.Visualizza</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>it.biblio.servlet.Logout</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Ricerca</servlet-name>
    <servlet-class>it.biblio.servlet.Ricerca</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registrazione</servlet-name>
    <url-pattern>/Registrazione</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Ricerca</servlet-name>
    <url-pattern>/Ricerca</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Visualizza</servlet-name>
    <url-pattern>/Visualizza</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EsempioDS</servlet-name>
    <url-pattern>/EsempioDS</url-pattern>
  </servlet-mapping>
  <context-param>
    <param-name>data.source</param-name>
    <param-value>java:comp/env/jdbc/bibliodb</param-value>
  </context-param>
  <context-param>
    <param-name>view.template_directory</param-name>
    <param-value>template</param-value>
  </context-param>
  <context-param>
    <param-name>view.error_template</param-name>
    <param-value>errore.ftl.html</param-value>
  </context-param>
  <context-param>
    <param-name>view.debug</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>view.date_format</param-name>
    <param-value>dd/MM/yyyy hh:mm:ss</param-value>
  </context-param>
  <context-param>
    <param-name>view.outline_template</param-name>
    <param-value>outline.ftl.html</param-value>
  </context-param>
  <listener>
    <description>Inizializza il pool di connesioni per il database fornendo il datasource alle altre servlet</description>
    <listener-class>it.biblio.config.InizializzatoreContesto</listener-class>
  </listener>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <resource-ref>
    <res-ref-name>jdbc/bibliodb</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>
  <welcome-file-list>
    <welcome-file>Visualizza</welcome-file>
  </welcome-file-list>
</web-app>